configuration {
	modi:				"drun";
	font:				"Deja Vu Sans Mono 11";
	show-icons:                     true;
	display-drun: 			"";
	drun-display-format:            "{name}";
	sidebar-mode: 			false;
}

@theme "/dev/null"

* {
	bg:				#131313;
	fg:				#ffffff;
	button:				#1c1c1c;

	background-color:		@bg;
	text-color:			@fg;
	border-color:                   #131313;
}

window {
	border-radius:                  0px;
	width:			    	10%;
	height:                         97.6%;
	padding: 			0px;
	border:                         0;
	location:			north west;
	anchor:                         north west;
	y-offset:                       24px;
}

prompt {
	background-color:		#272727;
	enabled:			true;
	padding:			0% -1px 0% 0%;
	font:				"Monospace bold 10";
}

entry {
	placeholder:                    "Search";
	background-color:               #272727;
    	placeholder-color:              #ffffff;
    	expand:                         true;
    	padding:                        0.15% 0% 0% 0%;
}

inputbar {
	children:			[ prompt, entry ];
    	background-color:               #272727;
	border:                         2;
	border-color:                   #272727;
    	expand:                         false;
    	border-radius:                  0px;
    	margin:                         0%;
    	padding:                        2px;
}

listview {
    	columns:                        2;
    	lines:	                        12;
    	cycle:                          false;
    	dynamic:                        true;
    	layout:                         vertical;	
}

mainbox {
    	children:                       [ inputbar, listview ];
    	spacing:                       	0%;
    	padding:                        0% 0% 0% 0%;
}

element {
    	orientation:                    vertical;
    	padding:                        1% 0% 1% 0%;
}

element-icon {
    	size:                           3.8%;
    	horizontal-align:	 	0.5;
}

element-text {
    	expand:                         true;
    	horizontal-align:               0.5;
    	vertical-align:                 0;
    	margin:                         0.5% 0.5% -0.5% 0.5%;
}

element-text, element-icon {
	background-color:		inherit;
	text-color:			inherit;
}

element selected {
    	background-color:               #272727;
	border:                         2;
	border-color:                   #272727;
    	border-radius:                  0px;
}
