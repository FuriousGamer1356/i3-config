font pango:DejaVu Sans Mono 11

#############
# autostart #
#############

# required
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id dunst -config ~/.config/i3/dunstrc
exec --no-startup-id lxpolkit

# custom
#exec --no-startup-id nitrogen --set-scaled ~/.config/i3/wallpaper.jpg
exec --no-startup-id flameshot
exec --no-startup-id redshift

# for my machine
exec --no-startup-id xrandr --output eDP --right-of HDMI-A-0
exec --no-startup-id xinput set-prop 'SYNA7DB5:00 06CB:CD41 Touchpad' 'libinput Tapping Enabled' 1
exec --no-startup-id nitrogen --set-scaled ~/.config/i3/wallpaper.jpg --head=0 && nitrogen --set-scaled ~/.config/i3/wallpaper.jpg --head=1

###############
# keybindings #
###############

set $mod Mod4
floating_modifier $mod

# applications
bindsym $mod+t exec i3-sensible-terminal
bindsym $mod+w exec sensible-browser
bindsym $mod+q kill
# if rofi is active, kill it; if rofi isn't active, start it
bindcode --release 133 exec "if pgrep -x rofi; then killall rofi; else rofi -show drun -normal-window -config ~/.config/i3/rofi-theme.rasi; fi"
for_window [class="Rofi"] floating enable

# volume (uses amixer)
set $refresh_py3status killall -SIGUSR1 py3status
bindsym XF86AudioRaiseVolume exec --no-startup-id bash ~/.config/i3/scripts/volume.sh up && $refresh_py3status
bindsym XF86AudioLowerVolume exec --no-startup-id bash ~/.config/i3/scripts/volume.sh down && $refresh_py3status
bindsym XF86AudioMute exec --no-startup-id bash ~/.config/i3/scripts/volume.sh mute && $refresh_py3status

# media (uses playerctl)
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# screen (uses brightnessctl)
bindsym XF86MonBrightnessUp exec --no-startup-id ~/.config/i3/scripts/brightness.sh up
bindsym XF86MonBrightnessDown exec --no-startup-id ~/.config/i3/scripts/brightness.sh down
bindsym Print exec --no-startup-id flameshot gui

# focus windows
bindsym $mod+h focus left 
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move windows
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# window layouts
bindsym $mod+z split h
bindsym $mod+v split v
bindsym $mod+Tab layout toggle all
bindsym $mod+shift+f floating toggle

# i3 management
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# resize mode
mode "resize" {
	set $size 10
        bindsym h resize shrink width $size px or $size ppt
        bindsym j resize grow height $size px or $size ppt
        bindsym k resize shrink height $size px or $size ppt
        bindsym l resize grow width $size px or $size ppt

        bindsym Left resize shrink width $size px or $size ppt
        bindsym Down resize grow height $size px or $size ppt
        bindsym Up resize shrink height $size px or $size ppt
        bindsym Right resize grow width $size px or $size ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

# logout mode
set $logout "(l)ogout, s(u)spend, (h)ibernate, (r)eboot, (s)hutdown"
mode $logout {
	bindsym l exec --no-startup-id i3-msg exit, mode "default"
	bindsym u exec --no-startup-id systemctl suspend, mode "default" 
	bindsym h exec --no-startup-id systemctl hibernate, mode "default"
	bindsym r exec --no-startup-id systemctl reboot, mode "default"
	bindsym s exec --no-startup-id systemctl poweroff, mode "default"

	bindsym Escape mode "default"
	bindsym $mod+e mode "default"
}
bindsym $mod+e mode $logout

# num / caps lock indicator refresh
bindsym Caps_Lock exec $refresh_py3status
bindsym --release Caps_Lock exec $refresh_py3status
bindsym Num_Lock exec $refresh_py3status
bindsym --release Num_Lock exec $refresh_py3status

##########
# colors #
##########

# windows               border  border  font    indic.  border
client.focused          #272727 #272727 #ffffff #545454 #272727
client.focused_inactive #131313 #131313 #777777 #000000 #131313
client.unfocused        #131313 #131313 #777777 #000000 #131313

# workspace color
set $wsactivebgcol        #272727
set $wsactiveoutlinecol   #272727
set $wsactivefontcol      #ffffff
set $wsinactivebgcol      #272727
set $wsinactiveoutlinecol #272727
set $wsinactivefontcol    #777777

# mode color
set $modeoutlinecol       #272727
set $modebgcol            #272727
set $modefontcol          #ffffff

##############
# workspaces #
##############

# workspace names
set $ws1 "1:I"
set $ws2 "2:II"
set $ws3 "3:III"
set $ws4 "4:IV"
set $ws5 "5:V"
set $ws6 "6:VI"
set $ws7 "7:VII"
set $ws8 "8:VIII"
set $ws9 "9:IX"
set $ws10 "10:X"

# assign workspace to monitor
workspace $ws1 output HDMI-A-0
workspace $ws2 output eDP
workspace $ws3 output HDMI-A-0
workspace $ws4 output eDP
workspace $ws5 output HDMI-A-0
workspace $ws6 output eDP
workspace $ws7 output HDMI-A-0
workspace $ws8 output eDP
workspace $ws9 output HDMI-A-0
workspace $ws10 output eDP

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move window to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

#######
# bar #
#######

bar {
        status_command py3status -c ~/.config/i3/status-bar.conf -i ~/.config/i3/modules
	
	position top
	separator_symbol "-" 
	strip_workspace_numbers true
	colors {
		# focused
		focused_workspace  $wsactiveoutlinecol $wsactivebgcol $wsactivefontcol
		active_workspace   $wsinactiveoutlinecol $wsinactivebgcol $wsinactivefontcol
		focused_separator  #777777
		focused_statusline #ffffff

		# unfocused
		separator          #383838
		statusline         #777777
		inactive_workspace $wsinactiveoutlinecol $wsinactivebgcol $wsinactivefontcol

		# other
		binding_mode       $modeoutlinecol $modebgcol $modefontcol
		background         #272727
	}
}
