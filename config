###### PREFERENCES ######

set $mod Mod4
font pango:Monospace bold 11

# window color #        border  border  font    indic.  border
client.focused          #007040 #007040 #ffffff #00f090 #007040
client.focused_inactive #003000 #003000 #c0c0c0 #003000 #003000
client.unfocused        #003000 #003000 #c0c0c0 #003000 #003000

# active workspace color #
set $wsoutline   #000000
set $wscolor     #007040
set $wsfontcolor #ffffff

# inactive workspace color #
set $wsinactiveoutline   #000000
set $wsinactivecolor     #000000
set $wsinactivefontcolor #707070

# mode color #
set $modeoutlinecolor #000000
set $modecolor        #a0a000
set $modefontcolor    #ffffff

###### AUTOSTART ######

# change the line below or delete it!
exec --no-startup-id xinput set-prop 'SYNA7DB5:00 06CB:CD41 Touchpad' 'libinput Tapping Enabled' 1
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id nitrogen --set-scaled ~/.config/i3/wallpaper.jpg
exec --no-startup-id dunst
exec flameshot

###### KEYBINDINGS ######

# applications #
bindsym $mod+t exec i3-sensible-terminal
bindsym $mod+w exec sensible-browser
bindsym $mod+f exec xdg-open ~/
bindsym $mod+q kill
bindcode --release 133 exec rofi -show drun -config ~/.config/i3/config.rasi

# media #
bindsym XF86AudioRaiseVolume  exec --no-startup-id pactl set-sink-volume 0 +5%, exec pactl set-sink-mute 0 false
bindsym XF86AudioLowerVolume  exec --no-startup-id pactl set-sink-volume 0 -5%, exec pactl set-sink-mute 0 false
bindsym XF86AudioMute         exec --no-startup-id pactl set-sink-mute 0 toggle
bindsym XF86AudioPlay         exec playerctl play
bindsym XF86AudioPause        exec playerctl pause
bindsym XF86AudioNext         exec playerctl next
bindsym XF86AudioPrev         exec playerctl previous

# other #
bindsym XF86MonBrightnessUp   exec --no-startup-id brightnessctl set 10%+ 
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 10%-
bindsym Print                 exec --no-startup-id flameshot gui

# change focus #
bindsym $mod+h focus left 
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window #
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# other window management #
bindsym $mod+z split h
bindsym $mod+v split v
#bindsym $mod+Shift+f fullscreen toggle
bindsym $mod+Tab layout toggle all
bindsym $mod+Shift+f floating toggle

# restart / reload i3 #
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# resize mode #
mode "RESIZE" {
	set $size 10
        bindsym h resize shrink width $size px or $size ppt
        bindsym j resize grow height $size px or $size ppt
        bindsym k resize shrink height $size px or $size ppt
        bindsym l resize grow width $size px or $size ppt

        bindsym Left resize shrink width $size px or $size ppt
        bindsym Down resize grow height $size px or $size ppt
        bindsym Up resize shrink height $size px or $size ppt
        bindsym Right resize grow width $size px or $size ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "RESIZE"

# logout 'mode' #
set $logout "SLEEP (1), LOG OUT (2), REBOOT (3), SHUTDOWN (4)"
mode $logout {
	bindsym 1 exec --no-startup-id systemctl suspend, mode "default" 
	bindsym 2 exec --no-startup-id i3-msg exit, mode "default"
	bindsym 3 exec --no-startup-id systemctl reboot, mode "default"
	bindsym 4 exec --no-startup-id systemctl poweroff, mode "default"

	bindsym Escape mode "default"
	bindsym $mod+e mode "default"
}
bindsym $mod+e mode $logout

###### WORKSPACES ######

# workspace names #
set $ws1 "1:I"
set $ws2 "2:II"
set $ws3 "3:III"
set $ws4 "4:IV"
set $ws5 "5:V"
set $ws6 "6:VI"
set $ws7 "7:VII"
set $ws8 "8:VIII"
set $ws9 "9:IX"
set $ws10 "10:X"

# switch to workspace $
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace #
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

###### BAR ######

bar {
	status_command i3status -c ~/.config/i3/i3status.conf

	tray_padding 4
	strip_workspace_numbers yes
	separator_symbol " / "
	position top

	colors {
		separator          #ffffff
		binding_mode       $modeoutlinecolor  $modecolor       $modefontcolor
		focused_workspace  $wsoutline         $wscolor         $wsfontcolor 
		active_workspace   $wsinactiveoutline $wsinactivecolor $wsinactivefontcolor
		inactive_workspace $wsinactiveoutline $wsinactivecolor $wsinactivefontcolor
	}
}
